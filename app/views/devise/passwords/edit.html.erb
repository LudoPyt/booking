<h2>Changer votre Mot de passe</h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, as: :hidden %>
  <%= f.full_error :reset_password_token %>

  <div class="form-inputs">
    <%= f.input :password, label: "Nouveau Mot de Passe", required: true, autofocus: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
    <%= f.input :password_confirmation, label: "Confirmer le nouveau Mot de passe", required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Changer le Mot de passe", class: "btn btn-primary mt-4 mb-3 w-40", id: "take" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
